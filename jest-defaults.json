{
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "lines": 100,
        "functions": 100
      }
    },

    "moduleFileExtensions": [
        "ts",
        "js"
    ],
    "preset": "ts-jest",
    "transform": {
        "\\.ts$": "ts-jest"
    },
    "coverageReporters": [
        "lcov",
        "json",
        "text"
    ],
    "testMatch": [
        "<rootDir>/test/**/test-*.ts"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/test/"
    ],
    "collectCoverageFrom": [
        "<rootDir>/src/**/*.ts"
    ],
    "moduleNameMapper": {
        "^friengine-(.*)$": "<rootDir>/../friengine-$1/src",
        "friengine-common": "<rootDir>/../friengine-common/src"
    }
}